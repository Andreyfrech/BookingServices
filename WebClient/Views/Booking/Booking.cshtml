@model WebClient.Models.ViewModel.BookingVM

<form method="post">
    <input asp-for="services.Id" hidden />
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">Изменить оборудование</h2>
        </div>

        <div class="row">
            <div class="col-8">

                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="services.Name">Наименование</label>
                    </div>
                    <div class="col-8">
                        <label asp-for="services.Name">@Model.services.Name</label>
                        <input asp-for="services.Name" hidden />
                        <input asp-for="booking.ServicesId" hidden />
                    </div>

                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="services.Amount">Остаток</label>
                    </div>
                    <div class="col-8">
                        <label asp-for="services.Amount">@Model.services.Amount</label>
                        <input asp-for="services.Amount" hidden />
                    </div>

                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="booking.Amount">Количество</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="booking.Amount" class="form-control"  />
                        <span asp-validation-for="booking.Amount" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row py-2">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Изменить" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-primary"><i class="fas fa-sign-out-alt"></i> Назад</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>

    </div>

</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }
}