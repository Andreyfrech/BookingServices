
@model IEnumerable<WebClient.Models.ServicesObject>

<h2 class="text-primary">Список оборудования</h2>

<p>
    <a asp-controller="ServicesObject" asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> &nbsp; Добавить новое оборудование
    </a>
</p>
<table class="table" style="width:100%">
    <thead>
        <tr>
            <th>
                 Id
            </th>
            <th>
               Наименование
            </th>
            <th>
                Количество
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td width="10%">
                    @item.Id
                </td>
                <td width="40%">
                    @item.Name
                </td>
                <td width="20%">
                    @item.Amount
                </td>
                <td class="text-center">
                <div class="row -75 btn-group" role="group">
                    <a asp-route-Id="@item.Id" asp-action="Edit" class="btn btn-primary mx-2">
                        <i class="fas fa-edit"></i> Изменить
                    </a>
                    <a asp-route-Id="@item.Id" asp-action="Delete" class="btn btn-danger mx-2">
                        <i class="fas fa-trash-alt"></i> Удалить
                    </a>
                        <a asp-controller="Booking" asp-route-Id="@item.Id" asp-action="Booking" class="btn btn-primary mx-2">
                            <i class="fas fa-edit"></i> Бронирование
                        </a>
                </div>
                </td>
            </tr>
        }
    </tbody>
</table>


